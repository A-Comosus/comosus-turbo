{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NEXT_PUBLIC_GRAPHQL_ENDPOINT"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "docker-compose:up": {
      "cache": false
    },
    "docker-compose:down": {
      "cache": false
    },
    "dev": {
      "cache": false
    },
    "lint": {
      "outputs": []
    },
    "type-check": {},
    "build-storybook": {},
    "test": {},
    "test:watch": {},
    "test:ci": {
      "dependsOn": ["build"]
    },
    "offline": {
      "dependsOn": ["build"],
      "cache": false
    }
  }
}
