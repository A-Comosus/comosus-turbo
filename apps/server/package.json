{
  "name": "@comosus/server",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "yarn db:generate",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "docker-compose:up": "sh compose.sh && yarn db:push && yarn db:generate",
    "docker-compose:down": "docker compose down",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "start": "nest start",
    "dev": "nest start --watch --preserveWatchOutput --debug",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "type-check": "tsc --project tsconfig.json --pretty --noEmit",
    "test": "jest",
    "test:watch": "jest --colors --watch",
    "test:ci": "jest --colors --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "offline": "serverless offline"
  },
  "dependencies": {
    "@apollo/server": "^4.5.0",
    "@nestjs/apollo": "^11.0.4",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/graphql": "^11.0.4",
    "@nestjs/platform-express": "^9.0.0",
    "@prisma/client": "^4.12.0",
    "aws-lambda": "^1.0.7",
    "aws-serverless-express": "^3.4.0",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.4.1",
    "rxjs": "^7.2.0",
    "serverles": "^3.27.1",
    "serverless-offline": "^12.0.4",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@comosus/config-eslint": "*",
    "@comosus/config-jest": "*",
    "@comosus/config-ts": "*",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.1.0",
    "@nestjs/testing": "^9.0.0",
    "@types/express": "^4.17.13",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.11",
    "prisma": "^4.12.0",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
